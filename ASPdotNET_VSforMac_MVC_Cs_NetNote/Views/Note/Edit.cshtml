@{
    var types = ViewBag.Types as IEnumerable<SelectListItem>;
}
@model ASPdotNET_VSforMac_MVC_Cs_NetNote.Models.Note

<div class="container-fluid">
    <div class="row" style="margin-top: 10px; margin-bottom: 10px;">
        <form method="post" asp-action="Edit">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" data-provide="markdown" rows="10" cols="50" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" asp-items="types" value="typeId" class="form-control"></select>
            </div>
            <hr />
            <p>
                <button type="submit" class="btn btn-primary">儲存</button>
            </p>
        </form>
    </div>
</div>